@model WebApplication1.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Style/Page.css" />

    <title>Login</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

</head>
<body>
    <div>
        <h1>Login:</h1>
        @using (Html.BeginForm("Authenticate", "Login", FormMethod.Post))
        {
        <p>
            <h3>User Name: </h3> @Html.TextBoxFor(m => m.UserName) @Html.ValidationMessageFor(m => m.UserName)
            <br />
            <br />
            <h3>Password: </h3> @Html.PasswordFor(m => m.Password) @Html.ValidationMessageFor(m => m.Password)
            <br />
            <br />
            <br />
            <input class="myButton" id="submit" type="submit" value="Login" />
            <br />
            <div style="color:red"><h2>@ViewBag.Message</h2></div>
        </p>
        }
    </div>
</body>
</html>
