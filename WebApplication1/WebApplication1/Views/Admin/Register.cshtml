@model WebApplication1.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Style/Page.css" />
    <title>Register</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <form id="form1" runat="server">
        <div id="menu">
            <ul class="nav navbar-nav">
                <li>
                    <a href="@Url.Action("Index", "Admin")">
                        <span class="glyphicon glyphicon-home"></span>
                        Home
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Logout", "Admin")">
                        Logout
                    </a>
                </li>
            </ul>
        </div>
    </form>
    <br />
    <br />
    <br />
    <div>
        <h1>Sign up:</h1>
        @using (Html.BeginForm("Submit", "Admin", FormMethod.Post))
        {
        <h3>
            First Name: @Html.TextBoxFor(m => m.FirstName) @Html.ValidationMessageFor(x => x.FirstName)
            <br />
            <br />
            Last Name: @Html.TextBoxFor(m => m.LastName) @Html.ValidationMessageFor(x => x.LastName)
            <br />
            <br />
            ID: @Html.TextBoxFor(m => m.ID) @Html.ValidationMessageFor(x => x.ID)
            <br />
            <br />
            Email: @Html.TextBoxFor(m => m.Email) @Html.ValidationMessageFor(x => x.Email)
            <br />
            <br />
            UserName: @Html.TextBoxFor(m => m.UserName) @Html.ValidationMessageFor(x => x.UserName)
            <br />
            <br />
            Password: @Html.PasswordFor(m => m.Password) @Html.ValidationMessageFor(x => x.Password)
            <br />
            <br />
            Permission: @Html.TextBoxFor(m => m.Permission) @Html.ValidationMessageFor(x => x.Permission)
            <br />
            <br />
            <br />
            <input class="myButton" id="Submit" type="submit" value="Register" />
            <br />
            <br />
        </h3>
        }
        @{
            if (@ViewBag.IdMessage != null)
            {
                <div class="alert-box error"> <span>Error: </span> <h2>@ViewBag.IdMessage</h2></div>
            }
        }
    </div>
</body>
</html>
